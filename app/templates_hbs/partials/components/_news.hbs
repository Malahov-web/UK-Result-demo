
              <div class="row {{ blockClass }}">


              {{#each news as | item | }}

                <div class="{{ @root.itemOuterClass }}  news__item-outer--{{@index}}" data-field="{{ @root.textField }} ">

                    {{!> news__item  itemOuterClass = @root.itemOuterClass }}
                    {{!> news__item textField = @root.textField item=item  }}

                     <div class="news__item">
                 
                         <a href="{{item-link}}" class="news__item-image">
                             <img src="uploads/news/{{item-image}}" alt="{{item-title}}">
                         </a>

                         <div class="news__item-content">
                              <div class="news__item-content-inner">
                                  <div class="news__item-title">
                                      <a href="#">{{ item.[item-title] }}</a>
                                  </div>
                                  <time class="news__item-date" datetime="{{item-datetime}}">{{item-date}}</time>
                                  <div class="news__item-text">{{  item.[textField] }} {{ item-text-long}}</div>
                              </div>

                              <div class="news__item-button">
                                 <a href="{{item-link}}" class="btn btn-readmore">Читать дальше</a>
                              </div>
                         </div>
                     </div>                    

                </div>


              {{/each}}


              </div>
